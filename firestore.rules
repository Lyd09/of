
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita pública na coleção 'clients'
    // CUIDADO: Isso torna seus dados de clientes publicamente acessíveis.
    // Para um aplicativo de produção, você deve implementar autenticação.
    match /clients/{clientId} {
      allow read, write: if true;
    }
  }
}
